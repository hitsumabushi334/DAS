{
  "permissions": {
    "deny": [
      "Bash(git config *)",
      "Bash(brew install *)",
      "Bash(chmod 777 *)",
      "Bash(rm -rf /*)",
      "Bash(gh repo delete:*)",
      "Bash(pip install *)"
      // ... 他の危険なコマンド
    ]
  },
  "hooks": {
    "preToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$env:USERPROFILE\\.claude\\hooks\\hook_pre_commands.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "PostToolUse": [
          {
            "matcher": "Bash",
            "hooks": [
              {
                "type": "command",
                "command": "echo \"[$(Get-Date)] $env:USERNAME: $(echo $env:TOOL_INPUT | jq -r '.tool_input.command')\" >> \"$env:USERPROFILE\\.claude\\command_history.log\""
              }
            ]
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".js\") or endswith(\".ts\"))' | xargs -r prettier --write"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".py\"))' | xargs -r black --quiet"
          }
        ]
      }
    ]
  }
}
